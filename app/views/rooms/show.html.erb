<h2><strong>Room Number: </strong><%= @room.number %></h2>

<%= room_edit_button(@room)%>


<h3>Current Residents:</h3>

<%if @in_room.length > 0 %>
    <% @in_room.each do |resident|%>
        <p><%= resident.name%></p>
            <%= resident_view_button(resident)%>
            <%= resident_edit_button(resident)%>
            <%= resident_delete_button(resident)%>
    <%end%>
<%else%>
    <p>No Residents</p>
    <%= new_resident_button() %>
<%end%>
